		<script type="text/javascript">
			var day;
			var hour;
			var minute;
			var second;
			var judge=1;
			var	cishu=1;
			var judge1=1;
			var total=0;
			function start(){
				if(cishu==1)
				{
					judge1=0;
					cishu=0;
					judge=1;
					var interval=setInterval(function(){
						if(total<=0){
							total=total+1;
							clearInterval(interval);
						}	
						if(judge==0){
							clearInterval(interval);
							total=total+1;
						}
						second=total%60;
						minute=parseInt(total/60%60);
						hour=parseInt(total/60/60%24);
						day=parseInt(total/60/60/24);
						total--;
						timer.innerHTML=second;
						timer.value=second;
						timer1.innerHTML=minute;
						timer1.value=minute;
						timer2.innerHTML=hour;
						timer2.value=hour
						timer2.innerHTML=day;
						timer3.value=day;
						},1000);
					}
			}
				
			function reset(){
				second=0;
				day=0;
				hour=0;
				minute=0;
				timer.value=second;
				timer1.value=minute;
				timer2.value=hour;
				timer3.value=day;
				judge=0;
				cishu=1;
				judge1=1;
			}
			
			function stop(){
			    timer.value=second;
				timer1.value=minute;
				timer2.value=hour;
				timer3.value=day;
				judge=0;
				cishu=1;
				judge1=1;
			}
			
			function set(){
			    timer.value=second;
				timer1.value=minute;
				timer2.value=hour;
				timer3.value=day;
				judge=0;
				cishu=1;
				judge1=1;
			}
			
			function set(){
				if(judge1==1){
					second=document.getElementById('timer').value;
					minute=document.getElementById('timer1').value;
					hour=document.getElementById('timer2').value;
					day=document.getElementById('timer3').value;
					total=second/1+minute*60/1+hour*3600/1+day*86400/1;
					alert('设置成功，点击start开始'+day+'day'+hour+'hour'+minute+'minute'+second+'s'+'倒计时')
					judge=1;
					cishu=1;
					judge1=1;
				}
			}
		</script>
